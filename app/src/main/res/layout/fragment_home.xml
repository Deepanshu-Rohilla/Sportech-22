                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:fontFamily="@font/alice"
                                    android:gravity="center"
                                    android:padding="2dp"
                                    android:text="Sponsors"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0.33"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/theme_final4" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/developedByText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="1dp"
                            android:textColor="#000000"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Developed by: "
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/developedByText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="20dp"
                            android:clickable="true"
                            android:textColor="#000000"
                            android:focusable="true"
                            android:text="Sportech Technical team "
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabMic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_instagram"
                            android:tint="#FFFFFF"
                            app:backgroundTint="#990011"
                            app:fabSize="mini"

                            app:rippleColor="@color/colorWhite" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_facebook"
                            android:tint="#FFFFFF"
                            app:backgroundTint="#990011"
                            app:fabSize="mini"
                            app:rippleColor="@color/colorWhite" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabWeb"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_website"
                            android:tint="#FFFFFF"
                            app:backgroundTint="#990011"
                            app:fabSize="mini"
                            app:rippleColor="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabYoutube"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_youtube"
                            android:tint="#FFFFFF"
                            app:backgroundTint="#990011"
                            app:fabSize="mini"
                            app:rippleColor="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>



                <!--
                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />-->
            </LinearLayout>



        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>